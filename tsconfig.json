{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": false,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": [
            "es6"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./**/*.ts"
    ]
}
